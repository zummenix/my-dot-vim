
set nocompatible

syntax enable

set number
set ruler
set scrolloff=999
set autoindent
set backspace=indent,eol,start
set showcmd
set incsearch
set hlsearch
set laststatus=2
set splitright
set splitbelow

" Turn backup off
set nobackup
set noswapfile

" Indentation
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4
set autoindent
set smartindent

filetype plugin indent on

